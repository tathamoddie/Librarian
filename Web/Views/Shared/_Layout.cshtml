<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    </head>
    <body>
        <header>
            <h1><a href="@Url.RouteUrl(RouteNames.Home)">Librarian <span>(home)</span></a></h1>
            <nav>
                <ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.RouteLink("Projects", RouteNames.ListProjects)</li>
                        <li>@Html.RouteLink("Logout", RouteNames.Logout)</li>
                    }
                    else
                    {
                        <li>@Html.RouteLink("Login", RouteNames.Login)</li>
                    }
                </ul>
            </nav>
        </header>

        <div class="content-holder">
            @RenderBody()
        </div>

        <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    </body>
</html>